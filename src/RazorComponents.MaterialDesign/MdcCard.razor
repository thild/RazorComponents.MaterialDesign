<div class="mdc-card @CardClass">
  <div class="mdc-card__primary-action @PrimaryActionClass" @onclick="@OnPrimaryAction" tabindex="0" >
    @if(Media != null) {
      <div class="mdc-card__media @MediaClass">
        <div class="mdc-card__media-content">
          @Media
        </div>
      </div>
    }
    <div class="mdc-card__primary">
      @if(Thumbnail != null) {
        <div class="mdc-card__thumbnail @ThumbnailClass">
          @Thumbnail
        </div>
      }
      @if(Title != null) {
        <h2 class="mdc-card__title @TitleClass mdc-typography mdc-typography--headline6">@Title</h2>
      }
      @if(Subtitle != null) {
        <h3 class="mdc-card__subtitle @SubtitleClass mdc-typography mdc-typography--subtitle2">@Subtitle</h3>
      }
    </div>
    @if(Body != null) {
      <div class="mdc-card__secondary @BodyClass mdc-typography mdc-typography--body2">@Body</div>
    }
  </div>
  @if(Actions != null) {
    <div class="mdc-card__actions">
      @Actions
